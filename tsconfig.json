{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "rootDir": "backend/src",
      "outDir": "backend/dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["backend/src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  